<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="styles/site.css" />
    <link rel="stylesheet" type="text/css" href="styles/home.css" />
    <title>Sales Manager</title>
  </head>
  <body>
    <!--Cabeçalho da página-->
    <header id="header">
      <nav id="header-nav">
        <h1 id="header-logo">Sales Manager</h1>
        <button id="header-button">
          <span id="hamburger"></span>
        </button>
        <ul id="header-links">
          <li class="header-link-nav"><a href="/">Início</a></li>
          <li class="header-link-nav"><a href="informacoes">Informações</a></li>
          <li class="header-link-nav"><a href="download">Download</a></li>
          <li class="header-link-nav"><a href="sobre">Sobre</a></li>
          <li class="header-link-nav"><a href="contatar">Contatar</a></li>
        </ul>
      </nav>
    </header>

    <!--Corpo principal da página-->
    <main id="content"><%- body %></main>

    <!--rodapé-->
    <footer id="footer">
      <p>
        Essa página foi construída com
        <a href="https://ejs.co/" target="blank">EJS</a>
      </p>
    </footer>

    <script src="toggleMenu.js"></script>
    <script>
      const links = document.querySelectorAll(".header-link-nav");

      links.forEach((link) => {
        link.addEventListener("click", (e) => {
          links.forEach((othersLinks) => {
            othersLinks.classList.remove("active");
          });
          e.currentTarget.classList.add("active");
        });
      });
    </script>
  </body>
</html>
